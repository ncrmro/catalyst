{
  "name": "@catalyst/kubernetes-client",
  "version": "0.1.0",
  "description": "TypeScript client for Catalyst Kubernetes CRDs (Environment, Project) with exec/shell support",
  "type": "module",
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./environments": "./src/environments/index.ts",
    "./pods": "./src/pods/index.ts",
    "./exec": "./src/exec/index.ts",
    "./namespaces": "./src/namespaces/index.ts",
    "./zod": "./src/types/zod.ts"
  },
  "scripts": {
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@kubernetes/client-node": "^1.3.0"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "license": "MIT"
}
