{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@catalyst/*",
    "packages/@tetrastack/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:production": "node server-with-logging.js",
    "lint": "next lint",
    "test": "vitest run -c vitest.unit.config.ts",
    "test:unit": "vitest run -c vitest.unit.config.ts __tests__/unit",
    "test:integration": "vitest run -c vitest.unit.config.ts __tests__/integration",
    "test:integration:prpod": "vitest run -c vitest.unit.config.ts __tests__/integration/k8s-pull-request-pod-docker-build.test.ts",
    "test:components": "vitest run -c vitest.unit.config.ts __tests__/components",
    "test:watch": "vitest watch -c vitest.unit.config.ts",
    "test:coverage": "vitest run -c vitest.unit.config.ts --coverage",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:projects": "npx tsx src/scripts/seed-projects.ts",
    "typecheck": "npx tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
