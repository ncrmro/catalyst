    "ai": "^6.0.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.4",
    "gray-matter": "^4.0.3",
    "next": "15.4.6",
    "next-auth": "^5.0.0-beta.29",
    "next-logger": "^5.0.1",
    "next-ws": "^2.1.11",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "prom-client": "^15.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-xtermjs": "^1.0.10",
    "remark": "^15.0.1",
