{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.{ts,tsx,js,jsx,json}",
			"packages/**/*.{ts,tsx,js,jsx,json}",
			"__tests__/**/*.{ts,tsx,js,jsx,json}"
		]
	},
	"css": {
		"parser": {
			"cssModules": true
		},
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": { "level": "warn" },
				"useButtonType": { "level": "warn" },
				"noLabelWithoutControl": { "level": "warn" },
				"useKeyWithClickEvents": { "level": "warn" },
				"noStaticElementInteractions": { "level": "warn" },
				"useSemanticElements": { "level": "warn" },
				"useAriaPropsSupportedByRole": { "level": "warn" },
				"useAltText": { "level": "warn" }
			},
			"suspicious": {
				"noExplicitAny": { "level": "warn" },
				"noArrayIndexKey": { "level": "warn" },
				"noImplicitAnyLet": { "level": "warn" },
				"noNonNullAssertedOptionalChain": { "level": "warn" },
				"useIterableCallbackReturn": { "level": "warn" },
				"noShadowRestrictedNames": { "level": "warn" }
			},
			"style": {
				"noNonNullAssertion": { "level": "warn" },
				"useImportType": { "level": "warn" }
			},
			"correctness": {
				"noUnusedFunctionParameters": { "level": "warn" },
				"noEmptyPattern": { "level": "warn" },
				"useExhaustiveDependencies": { "level": "warn" }
			},
			"performance": {
				"noImgElement": { "level": "warn" }
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
