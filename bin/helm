#!/usr/bin/env bash
# Wrapper around helm with KUBECONFIG and namespace pre-configured.
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

export KUBECONFIG="$PROJECT_ROOT/web/.kube/config"

exec helm --namespace catalyst-system "$@"
